---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Error 404">
  <section class="bg-[#F3F6FB] pt-40 pb-28">
    <div class="container mx-auto">
      <div class="flex flex-col justify-center items-center mx-4 lg:mx-0">
        <h1
          class="mb-12 text-3xl lg:text-5xl text-primary font-bold text-center"
        >
          Lo sentimos, página<br /> no encontrada!
        </h1>
        <img src="/images/404.webp" width="417" height="209" alt="Error 404" />
        <a class="block mt-8" href="/"
          ><p class="text-paragraph text-2xl">⇐ Regresar al Inicio</p></a
        >
      </div>
    </div>
  </section>
</Layout>
