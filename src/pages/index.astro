---
import Layout from "../layouts/Layout.astro";
import HeroSlider from "../components/home/HeroSlider.astro";

import Services from "../components/home/Services.astro";
import About from "../components/home/About.astro";
import Why from "../components/home/Why.astro";
import Certificaciones from "../components/home/Certificaciones.astro";
import Customers from "../components/home/Customers.astro";
import Cta from "../components/Cta.astro";

const slides = [
  {
    url: "hero_1.webp",
    title: "Servicio de almacenamiento de productos farmacéuticos",
    subtitle: "Contamos con buenas prácticas de almacenamiento.",
  },
  {
    url: "/hero_2.webp",
    title: "Transporte y almacenaje de productos",
    subtitle:
      "Garantizamos la entrega segura y oportuna de suministros médicos en todo el país con logística con temperatura controlada.",
  },
  {
    url: "/hero_4.webp",
    title: "¡Aprovecha nuestras ofertas! ",
    subtitle:
      "Tu primer mes de almacenamiento totalmente gratis. Seguridad, confianza y ahorro en un solo lugar.",
  },
  {
    url: "/hero_3.webp",
    title: "Contamos con un excelente equipo de trabajo",
  },
];
---

<Layout title="Inicio">
  <HeroSlider slides={slides} />
  <Services />
  <Cta />
  <About />
  <Why />
  <Certificaciones />
  <!-- <Customers /> -->
</Layout>
