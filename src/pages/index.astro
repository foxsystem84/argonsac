import Certificaciones from "../components/home/Certificaciones.astro";
import Customers from "../components/home/Customers.astro";
import Cta from "../components/Cta.astro";

const slides = [
  {
    url: "hero_1.webp",
    title: "Buenas prácticas de almacenamiento",
