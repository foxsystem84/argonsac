---
import Layout from "../layouts/Layout.astro";
import HeroSlider from "../components/home/HeroSlider.astro";
import Services from "../components/home/Services.astro";
import About from "../components/home/About.astro";
import Why from "../components/home/Why.astro";
import Certificaciones from "../components/home/Certificaciones.astro";
import Customers from "../components/home/Customers.astro";
import Cta from "../components/home/Cta.astro";

const slides = [
  {
    url: "hero_1.webp",
    title: "Buenas prácticas de almacenamiento",
    subtitle:
      "Garantizar la conservación, eficacia y seguridad de nuestros productos durante su almacenamiento, cumpliendo con los más altos estándares.",
  },
  {
    url: "/hero_2.webp",
    title: "Transporte y almacenaje productos farmacéuticos",
    subtitle:
      "Garantizar la entrega segura y oportuna de suministros médicos en todo el país con logística con temperatura controlada.",
  },
  {
    url: "/hero_3.webp",
    title: "Discovery",
  },
];
---

<Layout title="Inicio">
  <HeroSlider slides={slides} />
  <Services />
  <About />
  <Why />
  <Certificaciones />
  <!-- <Customers /> -->
  <Cta />
</Layout>
