---
import Layout from "../layouts/Layout.astro";
import HeroSlider from "../components/home/HeroSlider.astro";

import Services from "../components/home/Services.astro";
import About from "../components/home/About.astro";
import Why from "../components/home/Why.astro";
import Certificaciones from "../components/home/Certificaciones.astro";
import Customers from "../components/home/Customers.astro";
import Cta from "../components/Cta.astro";

const slides = [
  {
    url: "hero_1.webp",
    title: "Servicio de almacenamiento de productos farmacéuticos",
    subtitle: "Contamos con las certificaciones establecidas por la DIGEMID",
    images: [
      {
        image1: "/images/bpa.webp",
        image2: "/images/bpdt.webp",
      },
    ],
  },
  {
    url: "/hero_2.webp",
    title: "Transporte y almacenaje de productos farmacéuticos",
    subtitle:
      "Nos especializamos en transportar productos farmacéuticos de forma segura y oportuna. \n Contamos con una flota vehicular especializada para el transporte de productos refrigerados y de temperatura controlada, cumpliendo con las Buenas Prácticas de Distribución y Transporte – BPDT emitida por DIGEMID.",
  },
  {
    url: "/hero_4.webp",
    title: "Primer mes de almacenamiento sin costo adicional",
