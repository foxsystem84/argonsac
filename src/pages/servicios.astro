---
import Layout from "../layouts/Layout.astro";
import FlipCard from "../components/services/FlipCard.astro";
import Header from "../components/Header.astro";
import VideoCard from "../components/services/VideoCard.astro";

const headers = [
  {
    title: "Servicios",
    src: "bg-[url(/images/bg-service.webp)]",
  },
];

const videos = [
  {
    id: 1,
    videoUrl: "/videos/recepcion.mp4",
    title: "Recepción de la mercadería",
    description: "Procedente de aduanas y laboratorios farmaceuticos.",
  },
  {
    id: 2,
    videoUrl: "/videos/almacenaje.mp4",
    title: "Almacenaje",
    description: "Nuestro almacén cuenta con áreas con diferentes temperaturas.",
  },
  {
    id: 3,
    videoUrl: "/videos/calidad.mp4",
    title: "Servicios de área de calidad",
    description: "Muestreo, revisión y reporte del estado de la mercadería que ingresa al almacén en estado de cuarentena (revisión organoléptica).",
  },
  {
    id: 4,
    videoUrl: "/videos/seguridad.mp4",
    title: "Seguridad",
    description: "Video vigilancia en todos los sectores de la empresa, contamos con sistema de alarmas electrónicas conectadas a dispositivos móviles para una respuesta inmediata.",
  },
  {
    id: 5,
    videoUrl: "/videos/transporte.mp4",
    title: "Transporte",
    description: "Cubrimos Lima Metropolitana y nuestros vehículos cuentan con monitoreo GPS en tiempo real.",
  },
];
---

<Layout title="Servicios">
  <Header headers={headers} />
  <main id="smooth-wrapper" class=" container mx-auto py-24 px-4">
    <div id="smooth-content">
      <h1 class="text-3xl lg:text-6xl font-bold text-center text-primary mb-8">
        Nuestros servicios
      </h1>
      <div class="grid grid-cols-1 md:grid-cols-2 space-y-10 md:space-y-32 ">      
  
        {
          videos.map((video) => (
          <div class="  video-container flex flex-col justify-center space-y-3 mr-0 md:mr-20 lg:mr-32">
            <h2 class="text-2xl md:text-3xl lg:text-5xl font-bold text-primary">{video.title}</h2>
            <p class="text-xl md:text-2xl text-paragraph">{video.description}</p>
          </div>
            <VideoCard
              videoUrl={video.videoUrl}
             
            />
          ))
        }
      </div>
    </div>
  </main>
</Layout>
<script>
  import { gsap } from "gsap";

  gsap.registerPlugin(ScrollTrigger, ScrollSmoother);

ScrollTrigger.normalizeScroll(true)

// create the smooth scroller FIRST!
let smoother = ScrollSmoother.create({
  smooth: 2,
  effects: true,
  normalizeScroll: true
});

  // Animate main title
  gsap.fromTo(
    "#main-title",
    { opacity: 0, y: -50 },
    { opacity: 1, y: 0, duration: 1, ease: "power3.out" }
  );
</script>
<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  ::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  html {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
