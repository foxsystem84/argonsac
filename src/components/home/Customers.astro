  .CompanyLogoList__slider {
    height: 50px;
    max-height: 50px;
  }
  .CompanyLogoList__container,
  .CompanyLogoList__slider {
    align-items: center;
    display: flex;
    gap: 64px;
    justify-content: space-between;
  }
  .CompanyLogoList__container {
    -webkit-animation: slide calc(var(--companies) * 4s) linear infinite;
    animation: slide calc(var(--companies) * 4s) linear infinite;
  }
  .CompanyLogoList__logo {
    padding: 0;
  }
  @-webkit-keyframes slide {
    0% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
    to {
      -webkit-transform: translateX(calc(-100% - 64px));
      transform: translateX(calc(-100% - 64px));
    }
  }
  @keyframes slide {
    0% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
    to {
