const images = [
  {
    src: "./images/about1.webp",
    alt: "nosotros",
  },
  {
    src: "./images/transporte.webp",
    alt: "about",
  },
];
---

<section class="py-28 container mx-auto">
  <div
    class="grid grid-cols-1 lg:grid-cols-2 gap-20 px-4 md:px-0"
    data-gsap="about"
  >
    <!-- <div class="relative">
      <img
        src={`${images[0].src}`}
        alt={`${images[0].alt}`}
