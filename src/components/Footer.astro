---
import { Icon } from "astro-icon/components";
import Copyright from "./Copyright.astro";
---

<footer class="pt-28 bg-[#1C2329] px-4 md:px-0">
  <div class="container mx-auto">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 text-white"
    >
